<%- include("../../views/partials/user/header") %>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        /* Global Refinements */
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            background-color: #f4f6f9;
            color: #333;
        }

        /* Product Detail Section */
        .sec-product-detail {
            background-color: #ffffff;
            padding: 4rem 0;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        /* Image Gallery */
        .wrap-slick3 {
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

        .zoom-container {
            cursor: zoom-in;
            overflow: hidden;
            position: relative;
        }

        .zoom-img {
            transition: transform 0.3s ease-out;
            width: 100%;
            height: auto;
        }

        /* Product Info */
        .product-details {
            background-color: #f9fafb;
            border-radius: 12px;
            padding: 2rem !important;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }

        .product-name {
            color: #2c3e50;
            font-weight: 700;
            margin-bottom: 1rem;
        }

        .stext-105 {
            color: #7f8c8d;
        }

        del {
            color: #bdc3c7;
            margin-right: 10px;
        }

        /* Color Options */
        .color-option {
            cursor: pointer;
            transition: transform 0.2s ease;
            border: 2px solid transparent;
        }

        .color-option:hover {
            transform: scale(1.2);
            border-color: rgba(0, 0, 0, 0.2);
        }

        /* Quantity and Actions */
        .quantity-wrapper {
            background-color: #ecf0f1;
            border-radius: 6px;
            padding: 0.5rem;
        }

        .num-product {
            width: 50px;
            text-align: center;
            border: none;
            background-color: transparent;
        }

        .btn-num-product-down,
        .btn-num-product-up {
            background-color: #3498db;
            color: white;
            border-radius: 50%;
            width: 30px;
            height: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Buttons */
        .action-buttons .btn-danger {
            background-color: #e74c3c;
            border: none;
            transition: all 0.3s ease;
        }

        .action-buttons .btn-danger:hover {
            background-color: #c0392b;
            transform: translateY(-3px);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        /* Wishlist Icon */
        .js-addwish-b2 {
            position: relative;
            transition: transform 0.3s ease;
        }

        .js-addwish-b2:hover {
            transform: scale(1.1);
        }

        /* Reviews Section */
        .tab01 {
            background-color: #f8f9fa;
            border-radius: 12px;
            padding: 2rem;
        }

        /* Responsive Adjustments */
        @media (max-width: 768px) {
            .product-details {
                padding: 1rem !important;
            }
        }

        .review-stars {
            display: flex;
            gap: 5px;
            cursor: pointer;
        }

        .star {
            font-size: 24px;
            color: gray;
            transition: color 0.2s;
        }

        .star:hover,
        .star:hover~.star {
            color: gold;
        }

        /* Thumbnails Container */
        /* Thumbnails Container */
        .thumbnails {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            /* 3 thumbnails per row */
            gap: 20px;
            /* Increased spacing between thumbnails */
            justify-content: center;
            /* Center the grid */
            margin-top: 20px;
            /* Space above the thumbnails */
            margin-right: 0;
            /* Remove extra right margin for better alignment */
            padding: 0 10px;
            /* Add some padding for responsiveness */
        }

        /* Individual Thumbnail Item */
        .thumbnail-item {
            cursor: pointer;
            overflow: hidden;
            border: 1px solid #ddd;
            border-radius: 5px;
            transition: transform 0.3s, box-shadow 0.3s;
            margin: 0 auto;
            /* Center each thumbnail in its grid cell */
        }

        /* Hover Effect */
        .thumbnail-item:hover {
            transform: scale(1.05);
            /* Slight zoom on hover */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            /* Subtle shadow on hover */
        }

        /* Thumbnail Image */
        .thumb-img {
            width: 100%;
            /* Responsive width */
            height: 180px;
            /* Consistent height for better grid alignment */
            object-fit: cover;
            /* Prevent image distortion */
            border-radius: 5px;
        }

        /* General Styles */
        .product-details {
            background: #fff;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 20px;
            max-width: 600px;
            margin: 0 auto;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            font-family: 'Arial', sans-serif;
        }

        .product-details h2 {
            font-size: 1.8rem;
            color: #333;
            margin-bottom: 15px;
            text-align: center;
        }

        .price-section {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 15px;
        }

        .price-section .regular-price {
            font-size: 1rem;
            color: #666;
            text-decoration: line-through;
        }

        .price-section .sale-price {
            font-size: 1.5rem;
            color: red;
            font-weight: bold;
        }

        .review-stars {
            text-align: center;
        }

        .review-stars .star {
            font-size: 1.5rem;
            color: #ffcc00;
            cursor: pointer;
            margin: 0 5px;
        }

        .product-description {
            font-size: 1rem;
            line-height: 1.6;
            color: #444;
            text-align: justify;
        }

        .availability {
            font-size: 1rem;
            text-align: center;
            font-weight: bold;
        }

        .quantity-add-cart {
            display: flex;
            justify-content: space-between;
            gap: 20px;
            margin-top: 20px;
        }

        .quantity-control {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .quantity-control button {
            width: 30px;
            height: 30px;
            line-height: 30px;
            text-align: center;
            border-radius: 50%;
            border: 1px solid #ddd;
            background-color: #f8f9fa;
            cursor: pointer;
        }

        .quantity-control input {
            width: 50px;
            height: 35px;
            text-align: center;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .quantity-control button:hover {
            background-color: #007bff;
            color: #fff;
            border: none;
        }

        button.btn-primary {
            padding: 10px 20px;
            font-size: 1rem;
            border-radius: 5px;
            background-color: #007bff;
            color: white;
            border: none;
            cursor: pointer;
        }

        button.btn-primary:hover {
            background-color: #0056b3;
        }

        .availability {
            justify-content: flex-start;
            font-size: 14px;
        }
    </style>




