<%- include("../../views/partials/user/header") %>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <div class="bg0 m-t-23 p-b-140">
        <div class="container">
            <div class="flex-w flex-sb-m p-b-52">
                <div class="flex-w flex-l-m filter-tope-group m-tb-10">
                    <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 how-active1" data-filter="*">
                        All Products
                    </button>
                </div>

                <div class="flex-w flex-c-m m-tb-10">

                    <div class="flex-c-m stext-106 cl6 size-105 bor4 pointer hov-btn3 trans-04 m-tb-4 js-show-search">
                        <i class="icon-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-search"></i>
                        <i class="icon-close-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
                        Search/Filter
                    </div>
                </div>

                <!-- Search product -->
                <div class="dis-none panel-search w-full p-t-10 p-b-15">
                    <div class="bor8 p-l-15 p-r-15 p-t-15">
                        <form action="/shop" method="get" class="search-form">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <input class="form-control" type="text" name="search"
                                        value="<%= typeof query !== 'undefined' ? query : '' %>"
                                        placeholder="Search products..." />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <select name="category" class="form-control">
                                        <option value="">All Categories</option>
                                        <% if(typeof categories !== 'undefined') { %>
                                            <% categories.forEach(category => { %>
                                                <option value="<%= category._id %>" 
                                                    <%= (typeof selectedCategory !== 'undefined' && selectedCategory == category._id) ? 'selected' : '' %>>
                                                    <%= category.categoryName %>
                                                </option>
                                            <% }) %>
                                        <% } %>
                                    </select>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <select name="priceRange" class="form-control">               
                                        <option value="">Price Range</option>
                                        <option value="0-500">Under ₹500</option>
                                        <option value="500-5000">₹500 - ₹5000</option>
                                        <option value="5000-10000">₹5000 - ₹10000</option>
                                        <option value="10000-50000">₹10000 - ₹50000</option>
                                        <option value="50000-200000">₹50000+</option>
                                    </select>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <select name="sortBy" class="form-control">
                                        <option value="">Sort By</option>
                                        <option value="nameAsc">Name: A to Z</option>
                                        <option value="nameDesc">Name: Z to A</option>
                                        <option value="priceLow">Price: Low to High</option>
                                        <option value="priceHigh">Price: High to Low</option>
                                    </select>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <select name="availability" class="form-control">
                                        <option value="">Availability</option>
                                        <option value="inStock">In Stock</option>
                                        <option value="outOfStock">Out of Stock</option>
                                    </select>
                                </div>
                                <div class="col-12 text-center">
                                    <button type="submit" class="btn btn-primary px-4">
                                        Search
                                    </button>
                                    <button type="reset" class="btn btn-secondary px-4 ms-2">
                                        Reset
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>

            <div class="row g-3" id="product-list">
                <% for(let i=0;i<products.length;i++){%>
                    <div class="col-6 col-md-4 col-lg-3">
                        <div class="product-card">
                            <div class="product-image">
                                <a href="/productDetails?id=<%= products[i]._id %>">
                                    <img src="/uploads/<%= products[i].productImage[0] %>"
                                        alt="<%= products[i].productName %>">
                                </a>
                                
                            </div>
                            <div class="product-details">
                                <h5 class="product-title">
                                    <%= products[i].productName %>
                                </h5>
                                <div class="product-price">
                                    <span class="price">₹<%= products[i].salePrice %></span>
                                    <% if (products[i].regularPrice> products[i].salePrice) { %>
                                        <span class="original-price">₹<%= products[i].regularPrice %></span>
                                        <% } %>
                                </div>
                                <% if (products[i].category && products[i].category.categoryOffer > 0) { %>
                                    <div class="category-offer">
                                        <span class="offer-badge">
                                            <%= products[i].category.categoryOffer %>% Category Offer
                                        </span>
                                    </div>
                                <% } %>
                                <div class="stock-status">
                                    <% if (products[i].quantity> 0) { %>
                                        <span class="in-stock">In Stock (<%= products[i].quantity %> left)</span>
                                        <% } else { %>
                                            <span class="out-of-stock">Out of Stock</span>
                                            <% } %>
                                </div>
                                <div class="product-actions">
                                    <% if (products[i].quantity> 0) { %>
                                        <button onclick="addToCart('<%= products[i]._id %>')"
                                            class="btn btn-primary">Add to Cart</button>
                                        <% } else { %>
                                            <button disabled class="btn btn-secondary">Out of Stock</button>
                                            <% } %>

                                    <button class="btn btn-instagram "  onclick="addToWishlist('<%= products[i]._id%>')">
                                        <img class="icon-heart1 " src="/assets/images/icons/icon-heart-01.png " alt="ICON">
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% } %>
            </div>

            <!-- Load more -->
       
     
        
        </div>
    </div>

    <style>
        .product-card {
            background: #fff;
            border: 1px solid #eee;
            border-radius: 8px;
            overflow: hidden;
            transition: transform 0.2s, box-shadow 0.2s;
        }

        .product-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .product-image {
            position: relative;
            padding-top: 100%;
            /* 1:1 Aspect Ratio */
            background: #f8f9fa;
        }

        .product-image img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: contain;
            padding: 0.5rem;
        }

        .product-details {
            padding: 0.75rem;
        }

        .product-title {
            font-size: 0.9rem;
            color: #333;
            margin-bottom: 0.5rem;
            line-height: 1.2;
        }

        .product-price {
            display: flex;
            align-items: baseline;
            gap: 0.5rem;
        }

        .price {
            color: #dc3545;
            font-weight: 600;
            font-size: 0.9rem;
        }

        .original-price {
            color: #6c757d;
            text-decoration: line-through;
            font-size: 0.8rem;
        }

        .stock-status {
            margin-bottom: 0.5rem;
        }

        .in-stock {
            color: #28a745;
            font-size: 0.8rem;
        }

        .out-of-stock {
            color: #dc3545;
            font-size: 0.8rem;
        }

        .product-actions {
            margin-top: 0.5rem;
        }

        .product-actions .btn {
            font-size: 0.8rem;
        }

        .category-offer {
            margin: 8px 0;
        }
        .offer-badge {
            background-color: #28a745;
            color: white;
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 0.85em;
        }

        /* Responsive adjustments */
        @media (max-width: 767px) {
            .product-title {
                font-size: 0.85rem;
            }

            .price {
                font-size: 0.85rem;
            }

            .original-price {
                font-size: 0.75rem;
            }
        }
    </style>

    <script>
        document.querySelector('select[name="priceRange"]').value = "<%=selectedPriceRange%>";            
        document.querySelector('select[name="search"]').value = "<%=query%>";   
        document.querySelector('select[name="category"]').value = "<%=selectedCategory%>";   
        document.querySelector('select[name="sortBy"]').value = "<%=selectedSort%>";   
        document.querySelector('select[name="availability"]').value = "<%=selectedAvailability%>";   document.querySelector('select[name="search"]').value = "<%=selectedPriceRange%>";   
        function addToCart(productId) {
            fetch('/addCart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ productId, quantity: 1 })
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        Swal.fire({
                            title: 'Success!',
                            text: 'Product added to cart successfully!',
                            icon: 'success',
                            confirmButtonText: 'OK'
                        });
                    } else {
                        Swal.fire({
                            title: 'Error!',
                            text: data.message || 'Failed to add product to cart.',
                            icon: 'error',
                            confirmButtonText: 'Retry'
                        });
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    Swal.fire({
                        title: 'Oops!',
                        text: 'Something went wrong.',
                        icon: 'error',
                        confirmButtonText: 'Close'
                    });
                });
        }

