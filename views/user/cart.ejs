    <style>
.cart-container {
    padding: 2rem;
    background: #f8f9fa;
    min-height: 80vh;
}

.cart-title {
    font-size: 2rem;
    color: #2d3436;
    margin-bottom: 2rem;
    font-weight: 600;
    text-align: center;
}

.table-shopping-cart {
    width: 100%;
    background: #fff;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    margin-bottom: 2rem;
}

.table_head {
    background: #3b82f6;
}

.table_head th {
    font-size: 1rem;
    color: white;
    text-transform: uppercase;
    padding: 1.2rem;
    font-weight: 500;
    text-align: center;
}

.table_head th.column-1 {
    width: 20%;
}

.table_head th.column-2 {
    width: 35%;
    text-align: left;
}

.table_head th.column-3 {
    width: 25%;
}

.table_head th.column-4 {
    width: 20%;
}

.table_row {
    border-bottom: 1px solid #f1f2f6;
    transition: all 0.3s ease;
}

.table_row:hover {
    background: #f8f9fa;
    transform: translateY(-2px);
}

.table_row td {
    padding: 1.5rem;
    vertical-align: middle;
}

.table_row .column-1 {
    text-align: center;
}

.table_row .column-1 img {
    width: 100px;
    height: 100px;
    object-fit: cover;
    border-radius: 10px;
    box-shadow: 0 3px 10px rgba(0,0,0,0.1);
    transition: transform 0.3s ease;
}

.table_row .column-1 img:hover {
    transform: scale(1.05);
}

.table_row .column-2 {
    font-size: 1.1rem;
    color: #2d3436;
    font-weight: 500;
    text-align: left;
}

.quantity-control {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    background: #f1f2f6;
    border-radius: 50px;
    padding: 0.5rem;
    width: fit-content;
    margin: 0 auto;
    box-shadow: 0 2px 5px rgba(0,0,0,0.05);
}

.btn-quantity {
    width: 35px;
    height: 35px;
    border: none;
    background: white;
    border-radius: 50%;
    font-size: 1.2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s;
    color: #3b82f6;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

.btn-quantity:hover:not(:disabled) {
    background: #3b82f6;
    color: white;
    transform: translateY(-2px);
}

.btn-quantity:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

.quantity-input {
    width: 40px;
    text-align: center;
    border: none;
    background: transparent;
    font-weight: 600;
    color: #2d3436;
    font-size: 1.1rem;
}

.btn-remove-item {
    width: 35px;
    height: 35px;
    border: none;
    background: #fff1f1;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s;
    color: #ff4757;
    margin: 0 auto;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

.btn-remove-item:hover {
    background: #ff4757;
    color: white;
    transform: scale(1.1) rotate(90deg);
}

.cart-empty {
    text-align: center;
    padding: 3rem;
    background: white;
    border-radius: 15px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.05);
}

.cart-empty p {
    font-size: 1.2rem;
    color: #2d3436;
    margin-bottom: 1.5rem;
}

.cart-empty a {
    display: inline-block;
    padding: 0.8rem 2rem;
    background: #3b82f6;
    color: white;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
}

.cart-empty a:hover {
    background: #2563eb;
    transform: translateY(-2px);
}

.cart-totals {
    background: white;
    padding: 25px;
    border-radius: 15px;
    box-shadow: 0 3px 10px rgba(0,0,0,0.1);
    position: sticky;
    top: 20px;
}

.cart-totals h4 {
    font-size: 1.25rem;
    color: #2d3436;
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid #f1f2f6;
    font-weight: 600;
}

.total-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    padding: 0.75rem 0;
    border-bottom: 1px solid #f1f2f6;
}

.total-row:last-of-type {
    border-bottom: none;
    margin-bottom: 1.5rem;
    font-weight: 600;
    font-size: 1.1rem;
}

.total-label {
    color: #2d3436;
}

.total-value {
    font-weight: 500;
    color: #2d3436;
}

.checkout-button {
    display: block;
    width: 100%;
    padding: 1rem;
    background: #3b82f6;
    color: white;
    text-align: center;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s;
    border: none;
    cursor: pointer;
}

.checkout-button:hover {
    background: #2563eb;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(59, 130, 246, 0.3);
}

@media (max-width: 768px) {
    .cart-container {
        padding: 1rem;
    }

    .table-shopping-cart {
        display: block;
        overflow-x: auto;
    }
    
    .table_head th,
    .table_row td {
        white-space: nowrap;
        padding: 1rem;
    }
    
    .cart-totals {
        margin-top: 1.5rem;
    }

    .table_row .column-1 img {
        width: 80px;
        height: 80px;
    }
}

@media (max-width: 992px) {
    .cart-totals {
        margin-top: 2rem;
        position: static;
    }
}
    </style>

    <!-- breadcrumb -->
    <div class="container">
        <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
            <a href="/" class="stext-109 cl8 hov-cl1 trans-04">
                Home
                <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
            </a>
            <span class="stext-109 cl4">Shopping Cart</span>
        </div>
    </div>

    <!-- Cart Section -->
    <div class="cart-container">
        <h1 class="cart-title">Shopping Cart</h1>
        <div class="row">
            <div class="col-lg-8">
                <table class="table-shopping-cart">
                    <thead class="table_head">
                        <tr>
                            <th class="column-1">Product</th>
                            <th class="column-2">Name</th>
                            <th class="column-3">Price</th>
                            <th class="column-4">Quantity</th>
                            <th class="column-5">Total</th>
                            <th class="column-6">Remove</th>
                        </tr>
                    </thead>
                    <tbody id="cart-items">
                        <% if (cart && cart.items && cart.items.length > 0) { %>
                            <% cart.items.forEach(function(item) { %>
                                <tr class="table_row">
                                    <td class="column-1">
                                        <div class="how-itemcart1">
                                            <img src="/uploads/<%= item.productId.productImage[0] %>" 
                                                 alt="<%= item.productId.productName %>">
                                        </div>
                                    </td>
                                    <td class="column-2">
                                        <span class="product-name"><%= item.productId.productName %></span>
                                    </td>
                                    <td class="column-3">Rs.<%= item.price %></td>
                                    <td class="column-4">
                                        <% if(item.productId.quantity != 0) { %>
                                            <div class="quantity-control">
                                                <button type="button"
                                                        class="btn-quantity decrease"
                                                        onclick="decreaseQuantity('<%= item.productId._id %>', this)"
                                                        <% if(item.quantity <= 1) { %>disabled<% } %>>
                                                    âˆ’
                                                </button>
                                                <input type="number" 
                                                       class="quantity-input" 
                                                       value="<%= item.quantity %>" 
                                                       data-price="<%= item.price %>"
                                                       max="5"
                                                       readonly>
                                                <button type="button"
                                                        class="btn-quantity increase"
                                                        onclick="increaseQuantity('<%= item.productId._id %>', this)"
                                                        <% if(item.quantity >= 5) { %>disabled<% } %>>
                                                    +
                                                </button>
                                            </div>
                                        <% } else { %>
                                            <span class="text-danger">Out of Stock</span>
                                        <% } %>
                                    </td>
                                    <td class="column-5">Rs.<%= item.totalPrice %></td>
                                    <td class="column-6">
                                        <button type="button" 
                                                class="btn-remove-item" 
                                                onclick="removeItem('<%= item.productId._id %>')"
                                                title="Remove item">
                                            <i class="fa-solid fa-x"></i>
                                        </button>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="6" class="text-center">Your cart is empty</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>

            <div class="col-lg-4">
                <div class="cart-totals">
                    <h4>Cart Summary</h4>
                    <div class="total-row">
                        <span class="total-label">Subtotal</span>
                        <span class="total-value">Rs.<span id="cart-subtotal">0</span></span>
                    </div>
                    <div class="total-row">
                        <span class="total-label">Shipping</span>
                        <span class="total-value">Free</span>
                    </div>
                    <div class="total-row">
                        <span class="total-label">Total</span>
                        <span class="total-value">Rs.<span id="cart-total">0</span></span>
                    </div>
                    <a href="/checkout" class="checkout-button">
                        Proceed to Checkout
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Update cart totals
        function updateCartTotals() {
            const cartItems = document.querySelectorAll('.table_row');
            let subtotal = 0;

            cartItems.forEach(row => {
                const priceElement = row.querySelector('.column-3');
                const quantityElement = row.querySelector('.quantity-input');
                
                if (priceElement && quantityElement) {
                    const price = parseFloat(priceElement.textContent.replace('Rs.', '')) || 0;
                    const quantity = parseInt(quantityElement.value) || 0;
                    subtotal += price * quantity;
                }
            });

            document.getElementById('cart-subtotal').textContent = subtotal.toFixed(2);
            document.getElementById('cart-total').textContent = subtotal.toFixed(2);
        }

        // Decrease quantity
        async function decreaseQuantity(productId, button) {
            const container = button.closest('.quantity-control');
            const input = container.querySelector('.quantity-input');
            let quantity = parseInt(input.value);
            
            if (quantity > 1) {
                quantity--;
                await updateCartQuantity(productId, quantity, container);
            }
        }

        // Increase quantity
        async function increaseQuantity(productId, button) {
            const container = button.closest('.quantity-control');
            const input = container.querySelector('.quantity-input');
            let quantity = parseInt(input.value);
            
            if (quantity < 5) {
                quantity++;
                await updateCartQuantity(productId, quantity, container);
            }
        }

        // Update cart quantity
        async function updateCartQuantity(productId, quantity, container) {
            try {
                if (quantity > 5) {
                    throw new Error('Maximum 5 items allowed per product');
                }

                const response = await fetch('/cart/update-quantity', {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ productId, quantity })
                });

                const data = await response.json();

                if (data.success) {
                   
                    const input = container.querySelector('.quantity-input');
                    input.value = quantity;

            
                    const row = container.closest('tr');
                    const priceElement = row.querySelector('.column-3');
                    const totalCell = row.querySelector('.column-5');
                    
                    const price = parseFloat(priceElement.textContent.replace('Rs.', ''));
                    const newTotal = price * quantity;
                    
                    totalCell.textContent = `Rs.${newTotal.toFixed(2)}`;

                    
                    updateCartTotals();

                    // Update button states
                    const decreaseBtn = container.querySelector('.decrease');
                    const increaseBtn = container.querySelector('.increase');
                    
                    if (decreaseBtn) {
                        decreaseBtn.disabled = quantity <= 1;
                    }
                    if (increaseBtn) {
                        increaseBtn.disabled = quantity >= 5;
                    }
                } else {
                    throw new Error(data.message);
                }
            } catch (error) {
                console.error('Error updating quantity:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: error.message || 'Failed to update quantity'
                });
            }
        }

     
        document.addEventListener('DOMContentLoaded', function() {
            updateCartTotals();
        });
    </script>

